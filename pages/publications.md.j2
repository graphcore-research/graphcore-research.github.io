---
title: "Our Papers"
data: .publications.yml
---

<script>
function filterPapersByArea(area) {
    let showing = 0;
    let total = 0;
    let showingYears = new Set();
    document.querySelectorAll(".paper-entry-link").forEach((e) => {
        if (area === null || e.dataset.paperAreas.split(",").includes(area)) {
            e.style.display = "block";
            showing++;
            showingYears.add(e.dataset.paperYear);
        } else {
            e.style.display = "none";
        }
        total++;
    });
    document.querySelectorAll(".paper-sep-year").forEach((e) => {
        if (showingYears.has(e.innerText)) {
            e.style.display = "block";
        } else {
            e.style.display = "none";
        }
    });
    document.querySelector(".paper-area-showing").innerText = `Showing ${showing}/${total}`;
}
window.addEventListener("load", () => {
    const paperFilters = document.querySelectorAll(".paper-area-filter");
    paperFilters.forEach((e) => {
        e.addEventListener("click", () => {
            if (e.classList.contains("active")) {
                e.classList.remove("active");
                filterPapersByArea(null);
            } else {
                // Only one filter may be active
                paperFilters.forEach((o) => {
                    o.classList.remove("active");
                });
                e.classList.add("active");
                filterPapersByArea(e.dataset.paperArea);
            }
        });
    });
    const filters = document.getElementById("paper-filters");
    const secondarySidebar = document.querySelector(
        ".md-sidebar--secondary .md-sidebar__inner"
    );
    if (filters && secondarySidebar) {
        secondarySidebar.replaceChildren(filters);
    }
    filterPapersByArea(null);
});
</script>

<nav id="paper-filters" class="md-nav md-nav--secondary">
    <label class="md-nav__title" for="__drawer"><i class="fas fa-book"></i> Research Area</label>
    <ul class="md-nav__list">
    {% for key, label in data.areas.items() %}
        <li class="md-nav__item"><a class="md-nav__link paper-area-filter" data-paper-area="{{ key }}">
            {{ label }}
        </a></li>
    {% endfor %}
        <li class="md-nav__item paper-area-showing" data-search-exclude></li>
    </ul>
</nav>

<!-- note: 'markdown' gives us a separate search match for each paper (don't indent, as it would be parsed as a code block) -->
<div markdown>
{% for year, year_data in data.papers.items() %}
<div class="paper-sep-year">{{ year }}</div>
{% set year_conference = year_data.conference | default([], true) %}
{% set year_workshop = year_data.workshop | default([], true) %}
{% set year_papers = year_conference + year_workshop %}
{% for paper in year_papers %}
<div class="paper-entry">
<a href="{{ paper.url }}" target="_blank" class="paper-entry-link" data-paper-areas="{{ paper.area | default([]) | join(',') }}" data-paper-year="{{ year }}">
<h3 class="title">{% if paper.icon %}<i class="fas {{ paper.icon }}"></i>{% endif %} {{ paper.title }}</h3>
<div class="abstract" data-search-exclude>{{ paper.abstract }}</div>
<div class="authors" data-search-exclude>{{ paper.authors }}</div>
<div class="published" data-search-exclude>{{ paper.published }}</div>
</a>
</div>
{% endfor %}
{% endfor %}
</div>
